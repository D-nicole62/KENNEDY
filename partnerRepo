package org.openlmis.core.repository;

import lombok.NoArgsConstructor;
import org.openlmis.core.domain.Partner;
import org.openlmis.core.repository.mapper.PartnerMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import java.util.List;

@Component
@NoArgsConstructor
public class PartnerRepository {

    private PartnerMapper partnerMapper;

    @Autowired
    public PartnerRepository(PartnerMapper partnerMapper) {
        this.partnerMapper = partnerMapper;
    }

    public Long save(Partner partner) {
        partnerMapper.addPartner(partner);
        return partner.getId();
    }

    public List<Partner> findAll() {
        return partnerMapper.getAllPartners();
    }

    public Partner findByCode(String code) {
        return partnerMapper.getPartnerByCode(code);
    }

    public void deleteByCode(String code) {
        partnerMapper.deleteByCode(code);
    }

    public List<Partner> findBySearchTerm(String search) {
        return partnerMapper.searchPartners("%" + search + "%");
    }
}
